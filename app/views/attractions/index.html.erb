<h1>Attractions</h1>

<%= content_tag(:h2, "Hello, #{current_user.name}") if current_user.admin %><br><br>

<table style="width: 60%">
  <thead>
    <tr>
      <th> <strong>Name</strong></td>
      <th><strong>Tickets</strong></td>
      <th><strong>Details</strong></td>
    </tr>
  </thead>

  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <td>
          <% if current_user.admin %>
            <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
          <% else %>
            <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
          <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>

<p>
<%= link_to "Back to profile", user_path(current_user), {:class => "btn btn-primary"} %>
</p>

<p><%= link_to('New Attraction', new_attraction_path) if current_user.admin%></p>
